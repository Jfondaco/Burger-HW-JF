<div class = "container">

    <div class="row">
        <form class="col s6">
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="Create a Burger" id="makeBurger" type="text">
                    <a class="waves-effect waves-light btn" id="addBurger">Add Burger</a>
                </div>
            </div>
        </form>
    

        <div class="col s3" id="unDevoured">
                {{#each burgers}}
                {{#unless devoured}}
                <div>
                    <h3>Burgers: {{this.burgerName}}</h3>
                </div>
                <a class="waves-effect waves-light btn" id = "{{this.id}}">devour</a>
                {{/unless}}
                {{/each}}
            </div>

        <div class="col s3" id="devoured">
            {{#each burgers}}
            {{#if devoured}}
                <div>
                    <h3>You Devoured: {{this.burgerName}}</h3>
                </div>
            {{/if}}
            {{/each}}
            </div>
    </div> 
</div>
